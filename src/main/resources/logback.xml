<?xml version="1.0" encoding="UTF-8"?>
<configuration>
<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
  <encoder>
    <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
  </encoder>
</appender>

<logger level="INFO" name="com.prototype.userdirectory"/>
<logger level="INFO" name="org.springframework.ws.client"/>
<logger level="INFO" name="org.springframework.web.client"/>

<root level="INFO">
  <appender-ref ref="STDOUT" />
</root>
</configuration>
